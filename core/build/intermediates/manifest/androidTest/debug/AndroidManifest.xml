        <activity
            android:name="com.dk.mp.core.ui.HttpWebActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent" >
        </activity>
        <activity
            android:name="com.dk.mp.core.login.LoginActivity"
            android:theme="@style/Transparent" >
        </activity>
        <activity
            android:name="com.dk.mp.core.setting.ui.SettingActivity"
            android:theme="@style/Transparent" >
        </activity>
        <activity
            android:name="com.dk.mp.core.setting.ui.UserInfoActivity"
